vstack
	border [sides: "bottom"]
		expand [axis: "horz"]
			hstack
				text "Anathema Breakout"
				text " width: "
				text attributes.width
				text " height: "
				text attributes.height
				spacer
				text "lives: "
				text state.lives
				text " "
				text "score: "
				text attributes.score
				text " "
				text "high_score: "
				text attributes.high_score
	@game [width: attributes.width, height: attributes.height - 2]
