vstack
	border [sides: "bottom"]
		expand [axis: "horz"]
			hstack
				text "Anathema Breakout"
				spacer
				text "lives: "
				text state.lives
				text " "
				text "score: "
				text attributes.score
				text " "
				text "high_score: "
				text attributes.high_score
	@game (lost_life->lost_life) [width: attributes.width, height: attributes.height - 2]
